{
    "name": "idrinth/idle-git-finder",
    "description": "Looks recursively through cwd and displays the status of all git-repositories found.",
    "keywords": ["git", "status", "recursive"],
    "authors": [
        {
            "name": "Björn Büttner",
            "homepage": "https://github.com/idrinth"
        }
    ],
    "require": {
        "php": "^5.3|^7"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8|^5|^6|^7",
        "mikey179/vfsStream": "^1.6"
    },
    "bin": ["find-idle-git"],
    "autoload": {
        "psr-4": {
            "De\\Idrinth\\FindIdleGit\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "De\\Idrinth\\FindIdleGit\\Test\\": "test"
        }
    }
}
